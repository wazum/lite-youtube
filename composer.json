{
    "name": "wazum/lite-youtube",
    "type": "typo3-cms-extension",
    "description": "High-performance YouTube video rendering using lite-youtube web component for TYPO3 CMS",
    "keywords": [
        "TYPO3",
        "YouTube",
        "performance",
        "privacy",
        "web-component",
        "lite-youtube"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Wolfgang Klinger",
            "email": "wolfgang@wazum.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2 || ^8.3",
        "typo3/cms-frontend": "^12.4 || ^13.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.13",
        "vimeo/psalm": "^6.13",
        "friendsofphp/php-cs-fixer": "^3.86"
    },
    "autoload": {
        "psr-4": {
            "Wazum\\LiteYoutubeRenderer\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wazum\\LiteYoutubeRenderer\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "lite_youtube",
            "web-dir": ".Build/public"
        }
    },
    "config": {
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "cs": "vendor/bin/phpcs",
        "cs:fix": "vendor/bin/phpcbf",
        "format": "vendor/bin/php-cs-fixer fix",
        "format:check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "psalm": "vendor/bin/psalm",
        "psalm:ci": "vendor/bin/psalm --no-cache --show-info=false",
        "check": [
            "@cs",
            "@psalm",
            "@test"
        ]
    }
}
